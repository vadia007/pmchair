<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7|2.5" type="file" method="upgrade">
  <name>attachments_uk_ua_language_pack</name>
  <version>3.0.3</version>
  <creationDate>2012-09-29</creationDate>
  <author>Jonathan M. Cameron, Version 3.0: Sergey Litvintsev (serge_li@ukr.net)</author>
  <authorEmail>jmcameron@jmcameron.net</authorEmail>
  <authorUrl></authorUrl>
  <copyright>Copyright (C) 2011-2012 Jonathan M. Cameron. All rights reserved.</copyright>
  <license>GNU GPL 3: http://www.gnu.org/licenses/gpl-3.0.html</license>
  <description>ATTACHMENTS_UK_UA_LANGUAGE_PACK</description>
  <fileset>

    <!-- Admin component language folder -->
    <files folder="attachments_component/admin" target="administrator/components/com_attachments/language/uk-UA">
      <filename>index.html</filename>
      <filename>uk-UA.com_attachments.ini</filename>
      <filename>uk-UA.com_attachments.sys.ini</filename>
    </files>

    <!-- Admin component uk-UA language help folder -->
    <files folder="attachments_component/admin/help/uk-UA" target="administrator/components/com_attachments/help/uk-UA">
      <filename>help.css</filename>
      <filename>help.html</filename>
      <filename>index.html</filename>
      <folder>images</folder>
    </files>

    <!-- Site component language folder -->
    <files folder="attachments_component/site" target="components/com_attachments/language/uk-UA">
      <filename>index.html</filename>
      <filename>uk-UA.com_attachments.ini</filename>
    </files>

    <!-- Attachments plugin language files -->
    <files folder="attachments_plugin" target="plugins/content/attachments/language/uk-UA">
      <filename>index.html</filename>
      <filename>uk-UA.plg_content_attachments.ini</filename>
      <filename>uk-UA.plg_content_attachments.sys.ini</filename>
    </files>

    <!-- Attachments search plugin language files -->
    <files folder="attachments_search" target="plugins/search/attachments/language/uk-UA">
      <filename>index.html</filename>
      <filename>uk-UA.plg_search_attachments.ini</filename>
      <filename>uk-UA.plg_search_attachments.sys.ini</filename>
    </files>

    <!-- Attachments add attachment editor button language files -->
    <files folder="add_attachment_btn_plugin" target="plugins/editors-xtd/add_attachment/language/uk-UA">
      <filename>index.html</filename>
      <filename>uk-UA.plg_editors-xtd_add_attachment.ini</filename>
      <filename>uk-UA.plg_editors-xtd_add_attachment.sys.ini</filename>
    </files>

    <!-- Attachments insert attachment token editor button language files -->
    <files folder="insert_attachments_token_btn_plugin" target="plugins/editors-xtd/insert_attachments_token/language/uk-UA">
      <filename>index.html</filename>
      <filename>uk-UA.plg_editors-xtd_insert_attachments_token.ini</filename>
      <filename>uk-UA.plg_editors-xtd_insert_attachments_token.sys.ini</filename>
   </files>

    <!-- Attachments show attachment in editor plugin language files -->
    <files folder="show_attachments_in_editor_plugin" target="plugins/system/show_attachments/language/uk-UA">
      <filename>index.html</filename>
      <filename>uk-UA.plg_system_show_attachments.ini</filename>
      <filename>uk-UA.plg_system_show_attachments.sys.ini</filename>
    </files>

    <!-- Attachments attachments for content plugin language files -->
    <files folder="attachments_for_content" target="plugins/attachments/attachments_for_content/language/uk-UA">
      <filename>index.html</filename>
      <filename>uk-UA.plg_attachments_attachments_for_content.ini</filename>
      <filename>uk-UA.plg_attachments_attachments_for_content.sys.ini</filename>
    </files>

    <!-- Attachments attachments plugin framework language files -->
    <files folder="attachments_plugin_framework" target="plugins/attachments/attachments_plugin_framework/language/uk-UA">
      <filename>index.html</filename>
      <filename>uk-UA.plg_attachments_attachments_plugin_framework.ini</filename>
      <filename>uk-UA.plg_attachments_attachments_plugin_framework.sys.ini</filename>
    </files>

    <!-- Languages for this set of files -->
    <files folder="language/en-GB" target="language/en-GB">
      <filename>en-GB.files_attachments_uk_ua_language_pack.sys.ini</filename>
    </files>
    <files folder="language/uk-UA" target="language/uk-UA">
      <filename>uk-UA.files_attachments_uk_ua_language_pack.sys.ini</filename>
    </files>

  </fileset>

  <updateservers>
       <server type="extension" priority="1" name="Attachments Ukrainian (uk-UA) Language Pack Updates">http://jmcameron.net/attachments/updates/translations/Ukrainian-uk-UA/updates.xml</server>
  </updateservers>

</extension>

